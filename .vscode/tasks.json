{
	"version": "2.0.0",
	"tasks": [
    {
      "label": "tsc watch node, renderer",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$tsc-watch"
      ],
      "dependsOn": [
        "tsc watch node",
        "tsc watch renderer"
      ]
    },

    {
      "label": "tsc watch node",
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch"
    },

    {
      "label": "tsc watch renderer",
      "type": "typescript",
      "tsconfig": "renderer/tsconfig.json",
      "option": "watch"
    }
  ]
}
