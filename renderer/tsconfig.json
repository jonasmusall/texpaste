{
  /* TypeScript configuration for renderer scripts. */
  "include": [
    "**/*.ts",
    "../shared/types/*.ts"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "classic",
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true
  }
}
