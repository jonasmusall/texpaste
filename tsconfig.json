{
  /* TypeScript configuration for main and preload scripts. */
  "include": [
    "main/**/*.ts",
    "preload/**/*.ts",
    "shared/types/*.ts"
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "types": [
      "node"
    ]
  }
}
